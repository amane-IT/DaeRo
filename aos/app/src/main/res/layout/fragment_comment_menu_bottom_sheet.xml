<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/Linear_comment_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/imagebutton_regular"
            android:clipToOutline="true"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <TextView
                android:id="@+id/tv_comment_menu_modify"
                style="@style/SubHeadSemiBold"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수정" />

            <View
                android:id="@+id/view_modify"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray" />

            <TextView
                android:id="@+id/tv_comment_menu_delete"
                style="@style/SubHeadSemiBold"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="삭제" />

            <View
                android:id="@+id/view_delete"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray" />

            <TextView
                android:id="@+id/tv_comment_menu_report"
                style="@style/SubHeadSemiBold"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:textColor="#FB3958"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신고하기" />

            <View
                android:id="@+id/view_report"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray" />

            <TextView
                android:id="@+id/tv_comment_menu_block"
                style="@style/SubHeadSemiBold"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:textColor="#FB3958"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="차단" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear_comment_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/imagebutton_regular"
            android:clipToOutline="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Linear_comment_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:id="@+id/tv_comment_menu_cancel"
                style="@style/SubHeadSemiBold"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="취소"
                android:background="@drawable/imagebutton_regular"
                android:clipToOutline="true"

                />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>