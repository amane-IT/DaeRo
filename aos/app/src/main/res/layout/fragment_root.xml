<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentcontainer_root"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottomnavigation_root"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/tripBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행 전"
            app:layout_constraintBottom_toTopOf="@id/bottomnavigation_root"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/tripIng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행 증"
            app:layout_constraintBottom_toTopOf="@id/tripBefore"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/tripVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증완료"
            app:layout_constraintBottom_toTopOf="@id/tripIng"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/tripStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="트립스탬프완료"
            app:layout_constraintBottom_toTopOf="@id/tripVerification"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavigation_root"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/background"
            app:itemIconTint="@drawable/selector_menu_color_icon"
            app:itemTextColor="@drawable/selector_menu_color_text"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>