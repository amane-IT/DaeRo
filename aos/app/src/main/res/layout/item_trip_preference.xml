<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="tripPreference"
            type="com.ssafy.daero.data.dto.signup.TripPreferenceResponseDto" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_item_tripPreference_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_itemTripPreference_place"
                android:layout_width="176dp"
                android:layout_height="176dp"
                android:background="@{tripPreference.isSelected ? @color/primaryColor : 0}"
                android:padding="6dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:src="@drawable/img_my_page_album"
                app:roundImg="@{tripPreference.image_url}"/>

            <View
                android:layout_width="164dp"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:background="@drawable/overlay_gradient_my_page_album" />

            <TextView
                android:id="@+id/text_itemTripPreference_title"
                style="@style/BodyWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="@{tripPreference.place_name}"
                tools:text="강릉 여행" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
