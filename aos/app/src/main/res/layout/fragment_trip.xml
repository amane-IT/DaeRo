                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="3dp"
                    android:src="@drawable/ic_notification"
                    app:tint="@color/primaryDarkColor" />
            </com.google.android.material.appbar.MaterialToolbar>

            <View
