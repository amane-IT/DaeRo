<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dlg_bottomsheet">

    <TextView
        android:id="@+id/text_mapFilter_title"
        style="@style/HeadBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="날짜 선택"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_mapFilter_label_startDate"
        style="@style/SubHeadBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="시작일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mapFilter_title" />

    <TextView
        android:id="@+id/text_mapFilter_startDate"
        style="@style/Body"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_filter_date"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center|start"
        android:paddingStart="16dp"
        android:text="2022년 7월 27일"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mapFilter_label_startDate" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@id/text_mapFilter_startDate"
        app:layout_constraintEnd_toEndOf="@id/text_mapFilter_startDate"
        app:layout_constraintTop_toTopOf="@id/text_mapFilter_startDate"
        app:tint="@color/gray" />

    <TextView
        android:id="@+id/text_mapFilter_label_endDate"
        style="@style/SubHeadBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="종료일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mapFilter_startDate" />

    <TextView
        android:id="@+id/text_mapFilter_endDate"
        style="@style/Body"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_filter_date"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center|start"
        android:paddingStart="16dp"
        android:text="2022년 7월 27일"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mapFilter_label_endDate" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@id/text_mapFilter_endDate"
        app:layout_constraintEnd_toEndOf="@id/text_mapFilter_endDate"
        app:layout_constraintTop_toTopOf="@id/text_mapFilter_endDate"
        app:tint="@color/gray" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_mapFilter_apply"
        style="@style/BodyWhite"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_regular"
        android:text="필터 적용"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_mapFilter_endDate" />

</androidx.constraintlayout.widget.ConstraintLayout>